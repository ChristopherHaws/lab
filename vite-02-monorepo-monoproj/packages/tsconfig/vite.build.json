{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "@acme/tsconfig/vite.build.json",
	"compilerOptions": {
		/* ------------------------- TS project references ------------------------ */
		"composite": true,

		/* ----------------- Defaults from `@tsconfig/vite-react` ----------------- */
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,

		/* ---------------------------- Customizations ---------------------------- */
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": true
	}
}
