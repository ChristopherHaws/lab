# top-most EditorConfig file
root = true

# Global settings
[*]
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.md]
indent_style = tab
tab_width = 4

[*.{js,mjs,cjs,jsx,ts,mts,cts,tsx}]
indent_style = tab
indent_size = 4
tab_width = 4

[*.{css,scss,html}]
indent_style = tab
indent_size = 4
tab_width = 4

[*.{json,xml,yml,yaml,md,code-workspace}]
indent_style = tab
indent_size = 4
tab_width = 4
