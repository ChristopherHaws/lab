{
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"baseUrl": "./src",
		"rootDir": ".",
		"target": "ES2020",
		"module": "NodeNext",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		// "skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	}
}